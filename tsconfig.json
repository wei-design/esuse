{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        //    "noEmit": true, // 只进行类型检查
        "declaration": true,
        // 自动生成声明文件
        "declarationDir": "dist",
        // 声明文件输出的目录
        //    "emitDeclarationOnly": true, // 只输出声明文件，不转译ts文件

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "esuse": ["./packages/esuse/index.ts"]
        }
    },
    "include": [
        "*.ts",
        "packages",
        "packages/.vitepress/components/*.vue",
        "packages/.vitepress/*.ts",
        "meta",
        "vitest.config.mts"
    ],
    "exclude": ["node_modules", "**/*.md", "**/dist", "packages/.test", "packages/_docs"]
}
